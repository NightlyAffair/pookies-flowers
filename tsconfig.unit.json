{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": [
    "jest.setup.ts",
    "__mocks__/**/*.{ts,tsx}",
    "__tests__/**/*.{ts,tsx}",
    "components/**/*.tsx",
    "app/**/*.tsx"
  ],
  "exclude": ["node_modules", "figma", ".next"]
}
